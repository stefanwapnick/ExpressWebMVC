<% layout('main') %>

<!--/stories-->
<div class="row">
  <div class="col-sm-12">
    <button class="btn btn-default btn-block">New Book</button>
  </div>
</div>

<% for(var i=0; i<books.length;i++){%>
<div class="row">
  <br>
  <div class="col-md-2 col-sm-3 text-center">
    <a class="story-title" href="#"><img alt="" src="/images/book_image.png" style="width:100px;height:100px" class="img-circle"></a>
  </div>
  <div class="col-md-10 col-sm-9">
    <h3><%=books[i].title%></h3>
    <div class="row">
      <div class="col-xs-9">
        <h4><span class="label label-default"><%=books[i].author%></span></h4>
        <a href="/books/<%=books[i]._id%>">Edit book details</a>
      </div>
      <div class="col-xs-3"></div>
    </div>
    <br><br>
  </div>
</div>
<hr>
<%}%>