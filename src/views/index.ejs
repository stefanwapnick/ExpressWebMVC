<% layout('main') %>

    <div class="row">

      <!--Sign in form-->
      <div class="col-md-4 col-sm-5">
        <h2>Sign In</h2>
        <form action="/auth/signIn" method="post">
          <div class="form-group">
            <label for="username-signin">Username: </label>
            <input name="userName" id="username-signin" class="form-control">
          </div>
          <div class="form-group">
            <label for="password-signin">Password: </label>
            <input name="password" type="password" id="password-signin" class="form-control">
          </div>
            <input type="submit" class="btn btn-primary" value="Sign In">
        </form>
      </div>


      <!-- Sign up form -->
      <div class="col-md-4 col-sm-5">
        <h2> Sign Up </h2>
        <form action="/auth/signUp" method="post">
          <div class="form-group">
            <label for="username-signup" id="userName">Username:</label>
            <input name="userName" id="username-signup" class="form-control">
          </div>
          <div class="form-group">
            <label for="password-signup">Password: </label>
            <input name="password" type="password" id="password-signup" class="form-control">
          </div>
            <input type="submit" value="Sign Up" class="btn btn-primary"/>
        </form>

      </div>
    </div>

  </div>
</div>
